{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Flash STM32",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "openocd -f interface/stlink.cfg -f target/stm32f1x.cfg -c \"program \\\"${workspaceFolder}/build/Debug/funcionando_23-05_002.elf\\\" verify reset exit\""
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": [
            "-c"
          ]
        }
      }
    },
    {
      "label": "Build & Flash STM32",
      "dependsOn": [
        "CMake: build",
        "Flash STM32"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "cmake",
      "label": "CMake: build",
      "command": "build",
      "targets": [
        "all"
      ],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": "build",
      "problemMatcher": [],
      "detail": "CMake template build task"
    },
    {
      "type": "cmake",
      "label": "CMake: clean rebuild",
      "command": "cleanRebuild",
      "targets": [
        "all"
      ],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": "build",
      "problemMatcher": [],
      "detail": "CMake template clean rebuild task"
    },
    {
      "type": "cmake",
      "label": "CMake: build",
      "command": "build",
      "targets": [
        "all"
      ],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": "build",
      "problemMatcher": [],
      "detail": "CMake template build task"
    }
  ]
}